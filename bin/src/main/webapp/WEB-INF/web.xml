<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>ReimbursementApplication</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
   	<welcome-file>login.html</welcome-file>
  </welcome-file-list>
   
  <servlet>
  	<servlet-name>master</servlet-name>
  	<servlet-class>com.revature.team201.reimbursement.servlet.ApplicationServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>employee</servlet-name>
  	<servlet-class>com.revature.team201.reimbursement.servlet.EmployeeServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>manager</servlet-name>
  	<servlet-class>com.revature.team201.reimbursement.servlet.ManagerServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>reimbursement</servlet-name>
  	<servlet-class>com.revature.team201.reimbursement.servlet.ReimbursementServlet</servlet-class>
  </servlet>
  
  
  <servlet-mapping>
  	<servlet-name>master</servlet-name>
  	<url-pattern>/app</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>employee</servlet-name>
  	<url-pattern>/api/v1/employees/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>manager</servlet-name>
  	<url-pattern>/api/v1/managers/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>reimbursement</servlet-name>
  	<url-pattern>/api/v1/reimbursements/*</url-pattern>
  </servlet-mapping>

  
</web-app>